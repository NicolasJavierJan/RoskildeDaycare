         <font>
            <Font name="System Bold" size="60.0" />
         </font>
      </Label>
      <Label layoutX="116.0" layoutY="149.0" text="Username" textAlignment="RIGHT">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="116.0" layoutY="199.0" text="Password" textAlignment="RIGHT">
         <font>
            <Font size="16.0" />
         </font>
